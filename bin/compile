#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

# Create private key file
sh -c "echo 'deb https://gitsecret.jfrog.io/artifactory/git-secret-deb git-secret main' >> /etc/apt/sources.list"
wget -qO - 'https://gitsecret.jfrog.io/artifactory/api/gpg/key/public' | apt-key add -
apt-get update && apt-get install -y git-secret
echo $GPG_PRIVATE_KEY > $BUILD_DIR/private_key.gpg
# Import private key
gpg --import $BUILD_DIR/private_key.gpg
# Reveal secrets
git secret reveal